{
  "name": "flipper-zero",
  "displayName": "Flipper Zero",
  "description": "A vscode extension for the development of flipper zero apps.",
  "version": "0.1.0",
  "author": "paulober",
  "publisher": "paulober",
  "license": "MPL-2.0",
  "homepage": "https://github.com/paulober/vscode-flipper-zero/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/paulober/vscode-flipper-zero/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paulober/vscode-flipper-zero"
  },
  "engines": {
    "vscode": "^1.87.0",
    "node": ">=18.17.1"
  },
  "main": "./dist/extension.cjs",
  "markdown": "github",
  "minimumNodeVersion": 18,
  "contributes": {
    "commands": [
      {
        "command": "flipper-zero.newApp",
        "title": "New App",
        "category": "Flipper Zero"
      },
      {
        "command": "flipper-zero.clean",
        "title": "Delete all installed SDKs (also removes all flipper zero projects)",
        "category": "Flipper Zero"
      },
      {
        "command": "flipper-zero.famEdit.new",
        "title": "New Flipper Application Manifest",
        "category": "Flipper Zero"
      }
    ],
    "languages": [
      {
        "id": "fam",
        "aliases": [
          "FAM",
          "fam"
        ],
        "extensions": [
          ".fam"
        ]
      }
    ],
    "grammars": [
      {
        "language": "fam",
        "scopeName": "source.fam",
        "path": "./syntaxes/FlipperApplicationManifest.tmLanguage.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "flipper-zero.famEdit",
        "displayName": "Flipper Application Manifest",
        "selector": [
          {
            "filenamePattern": "application.fam"
          }
        ]
      }
    ]
  },
  "scripts": {
    "postinstall": "yarn dlx @yarnpkg/sdks vscode",
    "vscode:prepublish": "yarn run package",
    "compile": "rollup -c",
    "watch": "rollup -cw",
    "package": "rollup -c --environment BUILD:production --sourcemap hidden",
    "lint": "eslint src --ext mts",
    "test": "yarn run lint"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "18.17.x",
    "@types/vscode": "^1.87.0",
    "@types/which": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "rollup": "^4.13.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "rimraf": "^5.0.5",
    "which": "^4.0.0"
  },
  "packageManager": "yarn@4.1.1"
}
